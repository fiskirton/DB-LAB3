<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import gui.custom.NumberTextField?>
<?import gui.custom.CharacterTextField?>
<?import gui.custom.RangeTextField?>
<AnchorPane prefHeight="450.0" prefWidth="350.0" styleClass="pane" stylesheets="@new-record-dialog.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.NewRecordController">
   <children>
      <VBox fx:id="mainContainer" alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="400.0" prefWidth="350.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="5.0">
               <children>
                  <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" prefWidth="100.0" text="ID" />
                  <NumberTextField styleClass="text-field" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="400.0" spacing="5.0">
               <children>
                  <Label alignment="BOTTOM_RIGHT" minHeight="32.0" minWidth="100.0" text="Title" />
                  <CharacterTextField minHeight="35.0" styleClass="text-field" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="400.0" spacing="5.0">
               <children>
                  <Label text="Location" />
                  <CharacterTextField styleClass="text-field" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="110.0" prefHeight="100.0" prefWidth="400.0" spacing="5.0">
               <children>
                  <Label text="Drop Type" />
                  <CharacterTextField styleClass="text-field" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="210.0" prefHeight="100.0" prefWidth="400.0" spacing="5.0">
               <children>
                  <Label text="Category" />
                  <CharacterTextField styleClass="text-field" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="343.0" prefHeight="100.0" prefWidth="400.0" spacing="5.0">
               <children>
                  <Label text="Base Price" />
                  <NumberTextField styleClass="text-field" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="310.0" prefHeight="100.0" prefWidth="400.0" spacing="5.0">
               <children>
                  <Label text="NG" />
                  <RangeTextField styleClass="text-field" />
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" layoutY="400.0" prefHeight="50.0" prefWidth="350.0" spacing="10.0">
         <children>
            <Button fx:id="okButton" defaultButton="true" mnemonicParsing="false" onAction="#accept" prefHeight="25.0" prefWidth="75.0" text="OK" />
            <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" onAction="#cancel" prefHeight="25.0" prefWidth="75.0" text="Cancel" />
         </children>
         <padding>
            <Insets right="20.0" />
         </padding></HBox>
   </children>
</AnchorPane>
